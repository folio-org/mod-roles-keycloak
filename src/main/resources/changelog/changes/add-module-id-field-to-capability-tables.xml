<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
               http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
  <changeSet id="add-module-id-field-to-capability-table" author="Pavel Filippov">
    <addColumn tableName="capability">
      <column name="module_id" type="text"/>
    </addColumn>
  </changeSet>

  <changeSet id="add-module-id-field-to-capability-set-table" author="Pavel Filippov">
    <addColumn tableName="capability_set">
      <column name="module_id" type="text"/>
    </addColumn>
  </changeSet>
</databaseChangeLog>
