<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.0//EN"
        "https://checkstyle.org/dtds/suppressions_1_0.dtd">
<suppressions>
  <suppress checks="MethodLength"
            files="src[/\\]test[/\\]java[/\\]"/>
  <!-- Tests frequently declare variables at the top of a method for readability
       (e.g. mocks, test fixtures, expected values), even if some are only used
       much later.  Allowing this distance in test code avoids noisy warnings
       without compromising production-code quality. -->
  <suppress checks="VariableDeclarationUsageDistance"
            files="src[/\\]test[/\\]java[/\\]"/>
</suppressions>
